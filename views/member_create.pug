doctype html
head
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
  link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css' integrity='sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk' crossorigin='anonymous')
  link(rel='icon' href='/public/favicon.ico')
  title= title
body
  .container
    .row
      .col-md-6.offset-md-3.mt-5
        .card
          .card-header
            | #{form_name}
          .card-body
            h5.card-title Please fill in below information to create payment link
            if problem
              .alert.alert-danger(role='alert')= problem
            if url
              h5.card-text Payment link created, please copy:
              .form-group
                input#url.form-control(value=url)
              button.btn.btn-primary.copy(data-clipboard-target='#url') COPY
            if !url
              form(method='post')
                .form-group
                  label(for='item_description') Item Description
                  input#item_description.form-control(type='text' name='item_description')
                .form-group
                  label(for='item_price') Item Price
                  input#item_price.form-control(type='text' name='item_price')
                .form-group
                  label(for='name') Buyer Name
                  input#name.form-control(type='text' name='name')
                .form-group
                  label(for='phone_no') Buyer Phone No
                  input#phone_no.form-control(type='text' name='phone_no' value='+60')
                .form-group.form-check
                  input#cc_enable.form-check-input(type='checkbox' name='cc_enable' value='true')
                  label.form-check-label(for='cc_enable') Enable Credit Card
                .form-group.form-check
                  input#cc_charge_extra.form-check-input(type='checkbox' name='cc_charge_extra' value='true')
                  label.form-check-label(for='cc_charge_extra') Charge extra for credit card (offset 3%)
                button.btn.btn-primary(type='submit') Create
script(src='https://code.jquery.com/jquery-3.5.1.slim.min.js' integrity='sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj' crossorigin='anonymous')
